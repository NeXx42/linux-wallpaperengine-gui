<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080" x:Class="AvaloniaUI.MainWindow" Title="AvaloniaUI"
    xmlns:Pages="clr-namespace:AvaloniaUI.Pages">
    <Grid>
        <Grid x:Name="Pages">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{DynamicResource bg_Panel}">
                <Button Content="[]" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5" x:Name="btn_Settings">
                </Button>
            </Grid>

            <Pages:HomePage Grid.Column="1" x:Name="Page_HomePage"/>
        </Grid>
        <Grid x:Name="cont_SettingsContainer" Background="#a0000000">
            <Pages:SettingsPage x:Name="Page_Settings" Margin="100" />
        </Grid>
    </Grid>
</Window>
